package bg.tu_varna.sit.a1.f23621627.project.commands;

import java.io.File;

public class DeleteCommand implements Command {

    @Override
    public void execute(String arguments) {
        if (arguments == null || arguments.isEmpty()) {
            System.out.println("Please provide a file path to delete.");
            return;
        }

        File file = new File(arguments);
        if (file.exists()) {
            if (file.delete()) {
                System.out.println("File '" + arguments + "' was successfully deleted.");
            } else {
                System.out.println("Failed to delete the file.");
            }
        } else {
            System.out.println("File not found at path: " + arguments);
        }
    }
}
